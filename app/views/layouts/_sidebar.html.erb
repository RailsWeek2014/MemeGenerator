<h3>Benutzer</h3>
    <% if user_signed_in? %>
  Eingeloggt als <strong><%= current_user.username %></strong>.
  <ul class="nav nav-list">

  <li>
  <%= link_to list_meme_path do %>
    Meine Memes <span class="badge"><%= current_user.memes.all.count %></span>
  <% end %>
  </li>

  <li>
  <%= link_to list_meme_template_path do %>
    Meine Vorlagen <span class="badge"><%= current_user.meme_templates.all.count %></span>
  <% end %>
  </li>

  <li><%= link_to 'Account bearbeiten', edit_user_registration_path %></li>
  <% if current_user.isadmin? %>
  <li><%= link_to 'Adminbereich', acp_users_path %></li>
  <% end %>
  <li><%= link_to "Ausloggen", destroy_user_session_path, :method => :delete %></li>
  </ul>
<% else %>
  <ul class="nav nav-list">
  <li><%= link_to "Registrieren", new_user_registration_path %></li>
  <li><%= link_to "Einloggen", new_user_session_path %></li>
  </ul>
<% end %>