<% content_for :title do %>Registrierung<% end %>
<div class="page-header">
  <h1>Registrierung</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<% if @user.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Es traten <%= @user.errors.count %> Fehler auf:</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @user.errors.messages.each do |msg| %>
      <li><%= msg.last.last.html_safe %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
  <div class='form-group'>
  <%= f.label :email, :class => 'control-label' %><br />
    <div class="controls">
  <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
  </div>
  </div>

   <div class='form-group'>
  <%= f.label :username, "Benutzername", :class => 'control-label' %><br />
    <div class="controls">
  <%= f.text_field :username, :class => 'form-control' %>
  </div>
  </div>

  <div class='form-group'>
    <%= f.label :password, "Passwort", :class => 'control-label' %> <% if @validatable %><i>(<%= @minimum_password_length %> Zeichen mindestens)</i><% end %><br />
      <div class="controls">
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
    </div>

  <div class='form-group'>
    <%= f.label :password_confirmation, "PasswortbestÃ¤tigung", :class => 'control-label' %><br />
      <div class="controls">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
    </div>

  <div class='form-group'>  
    <div class="controls">
  <%= f.submit "registrieren", :class => 'btn btn-primary' %>
  </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
