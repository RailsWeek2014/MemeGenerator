<div class="page-header">
  <h1>Profil bearbeiten</h1>
</div>

<% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Es traten <%= @user.errors.count %> Fehler beim ändern des Profils auf:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class='form-group'>
  <div><%= f.label :email, :class => 'control-label' %><br />
    <div class="controls">
  <%= f.email_field :email, autofocus: true, :class => 'form-control' %></div>
  </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Warte auf Bestätigung für: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='form-group'>
  <div><%= f.label :password, "Passwort", :class => 'control-label' %> <i>(leerlassen wenn es nicht geändert werden soll)</i><br />
    <div class="controls">
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %></div>
  </div>
  </div>

  <div class='form-group'>
  <div><%= f.label :password_confirmation, "Passwortbestätigung", :class => 'control-label' %><br />
    <div class="controls">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %></div>
  </div>
  </div>

  <div class='form-group'>
  <div><%= f.label :current_password, "aktuelles Passwort", :class => 'control-label' %> <i>(aktuelles Passwort benötigt um Änderungen zu bestätigen)</i><br />
    <div class="controls">
    <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %></div>
  </div>
  </div>

  <div><%= f.submit "aktualisieren", :class => 'btn btn-primary' %></div>
<% end %>

<h3>Account löschen</h3>

<p>Nicht glücklich? <%= button_to "account löschen", registration_path(resource_name), data: { confirm: "Bist du sicher?" }, method: :delete, :class => 'btn btn-danger' %></p>

<%= link_to "Zurück", :back %>
