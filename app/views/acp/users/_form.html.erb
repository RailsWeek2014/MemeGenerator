<% if @user.errors.any? %>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>

    <%= form_for([:acp, @user]) do |f| %>
    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>
        <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </p>
        <p>
        <%= f.label 'Ist Administrator : ' %>
        <%= f.check_box :isadmin %>
        </p>
    <p>
        <%= f.submit %>
    </p>
    <% end %>